<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/radio_chileno">
    <TextView
            android:text="Informe quantos reais vai ser convertido"
            android:layout_width="326dp"
            android:layout_height="55dp" android:id="@+id/txt_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#673AB7" android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/edit_price"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.497" android:hint="R$ 99.99" android:textAlignment="center"
            android:textColor="#00F40A"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_price"
            android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.498" android:id="@+id/radio_group"
            android:checkedButton="@id/radio_dolar">
        <RadioButton
                android:text="Dolar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radio_dolar"/>
        <RadioButton
                android:text="Euro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radio_euro"/>
        <RadioButton
                android:text="Peso chileno"
                android:layout_width="146dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton6"/>
    </RadioGroup>
    <Button
            android:text="Converter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bt_conversor"
            app:layout_constraintTop_toBottomOf="@+id/radio_group" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:backgroundTint="#009688" android:capitalize="none"/>
    <TextView
            android:text="Valor convertido:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title_result"
            app:layout_constraintTop_toBottomOf="@+id/bt_conversor" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="36dp"
            app:layout_constraintHorizontal_bias="0.498" android:textColor="#673AB6" android:textStyle="bold"
            android:textSize="16sp"/>
    <TextView
            android:text="R$00.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/result_txt"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/title_result"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.136"
            android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>